{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",   // Keep ESNext for better module compatibility
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
